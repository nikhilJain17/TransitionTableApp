        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="0\t\t\t\t\t\t\t\t\t\t\t\t\t\t\t\t\t\t1\n"
        android:id="@+id/textView"
        android:layout_row="0"
        android:layout_column="0" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="17sp"
        android:id="@+id/_21"
        android:layout_row="3"
        android:layout_column="1" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00"
        android:textSize="17sp"
        android:id="@+id/_00"
        android:layout_row="1"
        android:layout_column="0" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/_01"
        android:textSize="17sp"
        android:layout_row="1"
        android:layout_column="1" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="01"
        android:textSize="17sp"
        android:id="@+id/_10"
        android:layout_row="2"
        android:layout_column="0" />
    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/_11"
        android:layout_row="2"
        android:textSize="17sp"

        android:layout_column="1" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        android:textSize="17sp"
        android:id="@+id/_30"
        android:layout_row="4"
        android:layout_column="0" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:id="@+id/_31"
        android:text=""
        android:layout_row="4"
        android:layout_column="1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Simplify"
        android:id="@+id/simplify"
        android:layout_row="36"
        android:layout_column="0" />
</GridLayout>
